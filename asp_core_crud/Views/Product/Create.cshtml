@model asp_core_crud.Models.Product
@using Microsoft.AspNetCore.Mvc.Rendering

@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger">
        @foreach (var entry in ViewData.ModelState)
        {
            foreach (var error in entry.Value.Errors)
            {
                <div><strong>@entry.Key</strong>: @error.ErrorMessage</div>
            }
        }
    </div>
}



<h2>Yeni Ürün Ekle</h2>

<form asp-action="Create" method="post">

    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Price"></label>
        <input asp-for="Price" type="number" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <!-- Kategori seçimi -->
    <div class="form-group">
        <label>Kategori</label>
        <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.Categories"></select>
    </div>

    <!-- Etiket seçimi (checkbox) -->
    <div class="form-group">
        <label>Etiketler</label><br />
        @foreach (var tag in (List<asp_core_crud.Models.Tag>)ViewBag.Tags)
        {
            <input type="checkbox" name="SelectedTags" value="@tag.Id" /> @tag.Name <br />
        }
    </div>

    <!-- ProductDetail alanları -->
    <div class="form-group">
        <label>Açıklama</label>
        <textarea name="Description" class="form-control"></textarea>
    </div>

    <div class="form-group">
        <label>Üretici</label>
        <input name="Manufacturer" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Kaydet</button>
    <a asp-action="Index" class="btn btn-secondary">Geri</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
